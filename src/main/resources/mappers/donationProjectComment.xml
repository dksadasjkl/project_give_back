<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.give.repository.DonationProjectCommentMapper">

    <resultMap id="DonationProjectCommentMap" type="com.project.give.entity.DonationProjectComment">
        <id property="donationProjectCommentId" column="donation_project_comment_id"/>
        <result property="donationProjectId" column="donation_project_id"/>
        <result property="userId" column="user_id"/>
        <result property="donationProjectCommentText" column="donation_project_comment_text"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>

        <association property="user" javaType="com.project.give.entity.User">
            <result property="username" column="user_username"/>
            <result property="nickname" column="user_nickname"/>
        </association>
    </resultMap>

    <insert id="insertDonationProjectComment" parameterType="com.project.give.entity.DonationProjectComment">
        INSERT INTO
            donation_project_comment_tb
        VALUES
            (0, #{donationProjectId}, #{userId}, #{donationProjectCommentText}, now(), now())
    </insert>

    <select id="selectCommentsByProjectId" parameterType="int" resultMap="DonationProjectCommentMap">
        SELECT
        dpc.donation_project_comment_id,
        dpc.donation_project_id,
        dpc.user_id,
        dpc.donation_project_comment_text,
        dpc.create_date,
        dpc.update_date,
        ut.user_nickname,
        ut.user_username
        FROM
            donation_project_comment_tb dpc
            left outer join user_tb ut on ut.user_id = dpc.user_id
        WHERE
            donation_project_id = #{donationProjectId}
    </select>
</mapper>