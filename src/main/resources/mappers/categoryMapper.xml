<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.give.repository.CategoryMapper">

    <resultMap id="DonationCategoryResultMap" type="com.project.give.entity.DonationCategory">
        <id property="donationCategoryId" column="donation_category_id"/>
        <result property="donationCategoryNameKor" column="donation_category_name_kor"/>
    </resultMap>

    <select id="getCategoriesByType" resultMap="DonationCategoryResultMap"  parameterType="string">
        select
            donation_category_id,
            donation_category_name_kor,
            donation_category_type
        from
            donation_category_tb
        where
            donation_category_type = #{categoryType}
    </select>

    <select id="selectAllDonationCategories" resultMap="DonationCategoryResultMap"  parameterType="string">
        select
            donation_category_id,
            donation_category_name_kor,
            donation_category_type
        from
            donation_category_tb
    </select>

</mapper>