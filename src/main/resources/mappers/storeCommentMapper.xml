<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.give.repository.StoreCommentMapper">

    <resultMap id="StoreCommentMap" type="com.project.give.entity.StoreComment">
        <id property="commentId" column="comment_id"/>
        <result property="productId" column="product_id"/>
        <result property="userId" column="user_id"/>
        <result property="commentText" column="comment_text"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <!-- 💬 댓글 등록 -->
    <insert id="insertComment" parameterType="com.project.give.entity.StoreComment" useGeneratedKeys="true" keyProperty="commentId">
        INSERT INTO store_comment_tb
        VALUES (0, #{productId}, #{userId}, #{commentText}, now(), now());
    </insert>

    <!-- 💬 상품별 댓글 조회 -->
    <select id="selectCommentsByProduct" resultMap="StoreCommentMap">
        SELECT * FROM store_comment_tb
        WHERE product_id = #{productId}
        ORDER BY create_date DESC;
    </select>

    <!-- 💬 단일 댓글 조회 -->
    <select id="selectCommentById" resultMap="StoreCommentMap">
        SELECT * FROM store_comment_tb
        WHERE comment_id = #{commentId};
    </select>

    <!-- 💬 댓글 수정 -->
    <update id="updateComment">
        UPDATE store_comment_tb
        SET comment_text = #{commentText},
        update_date = NOW()
        WHERE comment_id = #{commentId} AND user_id = #{userId};
    </update>

    <!-- 💬 댓글 삭제 -->
    <delete id="deleteComment">
        DELETE FROM store_comment_tb
        WHERE comment_id = #{commentId} AND user_id = #{userId};
    </delete>

    <!-- 💬 상품별 댓글 개수 -->
    <select id="countCommentsByProduct" resultType="int">
        SELECT COUNT(*) FROM store_comment_tb
        WHERE product_id = #{productId};
    </select>

</mapper>
